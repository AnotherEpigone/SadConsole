<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <GameHost>monogame</GameHost>
    <DefineConstants Condition=" '$(GameHost)' == 'sfml' ">$(DefineConstants);SFML</DefineConstants>
    <DefineConstants Condition=" '$(GameHost)' == 'monogame' ">$(DefineConstants);MONOGAME</DefineConstants>
  </PropertyGroup>

  <ItemGroup Condition=" '$(GameHost)' == 'monogame' ">
    <ProjectReference Include="..\..\SadConsole.Host.MonoGame\SadConsole.Host.MonoGame.csproj" />
  </ItemGroup>
  
  <ItemGroup Condition=" '$(GameHost)' == 'sfml' ">
    <ProjectReference Include="..\..\SadConsole.Host.SFML\SadConsole.Host.SFML.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="TheSadRogue.Primitives" Version="1.0.0-alpha1-debug" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\SadConsole\SadConsole.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="ClassicBasic.Interpreter">
      <HintPath>..\..\..\ClassicBasic\ClassicBasic.Interpreter\bin\Debug\netstandard2.0\ClassicBasic.Interpreter.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
