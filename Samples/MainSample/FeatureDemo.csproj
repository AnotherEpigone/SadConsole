<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="CustomConsoles\CursorConsole.cs" />
    <Compile Remove="CustomConsoles\FadeConsole.cs" />
    <Compile Remove="CustomConsoles\MouseRenderingDebug.cs" />
    <Compile Remove="CustomConsoles\SceneProjectionConsole.cs" />
    <Compile Remove="CustomConsoles\SerializationTests.cs" />
    <Compile Remove="CustomConsoles\SplashScreen.cs" />
    <Compile Remove="CustomConsoles\SubConsoleCursor.cs" />
    <Compile Remove="CustomConsoles\TextCursorConsole.cs" />
    <Compile Remove="CustomConsoles\ViewsAndSubViews.cs" />
    <Compile Remove="CustomConsoles\WorldGenerationConsole.cs" />
  </ItemGroup>

  <PropertyGroup>
    <GameHost>monogame</GameHost>
    <DefineConstants Condition=" '$(GameHost)' == 'sfml' ">$(DefineConstants);SFML</DefineConstants>
    <DefineConstants Condition=" '$(GameHost)' == 'monogame' ">$(DefineConstants);MONOGAME</DefineConstants>
  </PropertyGroup>

  <ItemGroup Condition=" '$(GameHost)' == 'monogame' ">
    <ProjectReference Include="..\..\SadConsole.Host.MonoGame\SadConsole.Host.MonoGame.csproj" />
  </ItemGroup>
  
  <ItemGroup Condition=" '$(GameHost)' == 'sfml' ">
    <ProjectReference Include="..\..\SadConsole.Host.SFML\SadConsole.Host.SFML.csproj" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\SadConsole\SadConsole.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="HostSpecific\SFML\" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Ansi\files.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Ansi\QS-SIERR.ANS">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Ansi\ROY-BTC1.ANS">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Ansi\ROY-CCU3.ANS">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Ansi\ROY-DGZN.ANS">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="sad.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
